extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(3000)
    +alert-success(3000)

    h1(class="mb-4") Edit project 

    form(
        action=`${prefixAdmin}/project/edit/${proj.id}?_method=PATCH`
        id="form-edit-project"
        method="POST"
        enctype="multipart/form-data"
    )

        div(class="form-group")
            label(for="title") Title 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=proj.title
            )
        div(class="form-group")
            label(for="desc") Description
            textarea(
                class="form-control"
                id="desc"
                name="description"
                row="5"
            ) #{proj.description.overview}
        div(class="form-group"
            upload-image
        )
            label(for="thumbnail") Image 
            input(
                type="file"
                class="form-control-file"
                id="thumblnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
            src=proj.thumbnail
            upload-image-preview
            class="image-preview"
            )
                
            
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusPlanned"
                name="status"
                value="Planned"
                checked=(proj.status == "Planned" ? true : false)
            )
            label(for="statusPlanned" class="form-check-label") Planned
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInProgress"
                name="status"
                value="In Progress"
                checked=(proj.status == "In Progress" ? true : false)
            )
            label(for="statusInProgress" class="form-check-label") In Progress
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusCompleted"
                name="status"
                value="Completed"
                checked=(proj.status == "Completed" ? true : false)
            )
            label(for="statusCompleted" class="form-check-label") Completed
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update

    script(src="/admin/js/project.js") 